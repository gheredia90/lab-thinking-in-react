{
  "presets": [
    ["env", {
      "modules": false,
      "targets": {
        "browsers": "> 1%",
        "uglify": true
      },
      "useBuiltIns": true
    }],
    ["es2015", { "modules": false }],
    "react"
  ],

  "plugins": [
    "syntax-dynamic-import",
    "transform-react-jsx",
    "transform-object-rest-spread",
    ["transform-class-properties", { "spec": false }],
  ],

  "env": {
    "test": {
      "presets": [["es2015"], "react", "stage-2"],
      "plugins": ["react-hot-loader/babel"]
    }
  }
}
